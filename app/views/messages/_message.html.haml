.chat-content
  %ul.clearfix
    %li
      %p.chat-content__chat-name=current_user.name
    %li
      %p.chat-content__chat-date=message.created_at.strftime('%Y年%m月%d日 %H:%M')
    %br
    %li
      %p.chat-content__chat-message
      =message.content
      %p.chat-content__chat-image
      =image_tag message.image.to_s
